<html>

<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <title><%= page.title %> | <%= config.title %></title>
    <%- css('css/post.css') %>
</head>

<body>

    <div id="book-nav">
        <button class="open-chapter">
            目录
        </button>
        <a class="book-info" href="/">
            <span class="nameoneline">化学小子的前端实验册</span>
        </a>
    </div>
    <article class="post">
        <div class="post-title">
            <h2 class="title"><%= page.title %></h2>
        </div>
        <div class="article-info">
            <div class="meta">

                <% page.tags.data.forEach(function (tag) { %>
                <span class="tags"><%- tag.name %></span>
                <% }) %>

                <span class="post-time"><%- date(page.date, "YYYY-MM-DD") %></span>
            </div>
        </div>
        <div class="note-content">
            <%- page.more %>
        </div>
        <!-- <% console.log(page.prev) %> -->
    </article>
    <!-- 我是章节目录  -->
    <div id="book-chapters">
        <div class="book-chapters-header">
            <span class="title">目录(共<%- site.posts.length %>篇)</span>
            <button class="reset">切换顺序</button>
        </div>
        --------

        <%# console.log(site.posts.data) %>

        <% site.posts.data.forEach( function(post){ %>
        <ul>
            <li><a href="<%- url_for(post.path) %>"><%- post.order %>---<%- post.title %></a></li>
        </ul>
        <% }) %>
        <div class="book-chapters-drawer-footer">
            <a href="#">前往作品主页</a>
        </div>


    </div>
    <!-- 111 -->
    <%- js('js/index.js') %>

</body>

</html>